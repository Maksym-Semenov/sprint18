@model TaskAuthenticationAuthorization.Models.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Log in";
}

<h2>Log in</h2>

<a asp-action="Registration" asp-controller="Account">Registration</a>

<form asp-action="Login" asp-controller="Account" asp-anti-fogerty="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Email">Enter Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter Password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <input type="submit" value="Login" class="btn-outline-dark" />
        </div>
    </div>
</form>
